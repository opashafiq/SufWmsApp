<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvModelNoRepair_Stat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:background="@drawable/cell_shape_tv"
        android:padding="5dp"
        android:singleLine="true"
        android:text="mno" />

    <TextView
        android:id="@+id/tvPlantTypeNameRepair_Stat"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/cell_shape_tv"
        android:padding="5dp"
        android:singleLine="true"
        android:text="mno" />


    <TextView
        android:id="@+id/tvCheckDateRepair_Stat"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/cell_shape_tv"
        android:padding="5dp"
        android:singleLine="true"
        android:text="mno" />

</LinearLayout>