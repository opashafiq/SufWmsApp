<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnDamageEntry"
        android:layout_width="334dp"
        android:layout_height="46dp"
        android:layout_marginBottom="196dp"
        android:text="Entry Damage Report"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="40dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclePartDetails"
        android:layout_width="332dp"
        android:layout_height="358dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLoadData"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="39dp" />

    <Button
        android:id="@+id/btnLoadData"
        android:layout_width="335dp"
        android:layout_height="47dp"
        android:layout_marginBottom="12dp"
        android:text="Load Data"
        app:layout_constraintBottom_toTopOf="@+id/btnDamageEntry"
        tools:layout_editor_absoluteX="39dp" />

</androidx.constraintlayout.widget.ConstraintLayout>